<div class="container">
    <div class="row">
        {{#each randomBeer}}
        <img class="img" src="{{image_url}}" alt="">
        <div class="beer-body">
            <h5>{{name}}</h5>
            <p class="tag">{{tagline}}</p>
            <p>{{description}}</p>
            <p><b>Food Pairing </b>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><b>Brewer's Tips: </b>{{brewers_tips}}</p>
            {{/each}}
        </div>
    </div>
</div>